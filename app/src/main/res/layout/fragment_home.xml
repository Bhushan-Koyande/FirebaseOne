<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:text=" You Are Here"
        android:maxLines="1"
        android:id="@+id/locationTextView"
        style="@style/DefaultAppFont"
        android:drawableStart="@drawable/map_pin_one"
        android:elevation="5dp"
        android:shadowColor="#cccccc"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/locationTextView"
        android:layout_marginBottom="140dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/bad_script"
            android:padding="5dp"
            android:text="Your Contacts"
            android:textSize="30sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/firstPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="40dp"
            android:drawableEnd="@drawable/icon_phone"
            android:fontFamily="@font/playfair_display"
            android:padding="4dp"
            android:text="No contacts added"
            android:textSize="28sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/secondPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:drawableEnd="@drawable/icon_phone"
            android:fontFamily="@font/playfair_display"
            android:padding="4dp"
            android:text="No contacts added"
            android:textSize="28sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/thirdPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:drawableEnd="@drawable/icon_phone"
            android:fontFamily="@font/playfair_display"
            android:padding="4dp"
            android:text="No contacts added"
            android:textSize="28sp" />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="30sp"
            android:text="Helplines"
            android:fontFamily="@font/bad_script"
            android:textStyle="bold"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/police"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:drawableEnd="@drawable/icon_phone"
                android:fontFamily="@font/playfair_display"
                android:padding="4dp"
                android:text="Police"
                android:textSize="25sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/fire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:drawableEnd="@drawable/icon_phone"
                android:fontFamily="@font/playfair_display"
                android:padding="4dp"
                android:text="Fire Station"
                android:textSize="25sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/medical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:drawableEnd="@drawable/icon_phone"
                android:fontFamily="@font/playfair_display"
                android:padding="4dp"
                android:text="Ambulance"
                android:textSize="25sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/women"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:drawableEnd="@drawable/icon_phone"
                android:fontFamily="@font/playfair_display"
                android:padding="4dp"
                android:text="Women Helpline"
                android:textSize="25sp" />

        </LinearLayout>
    </ScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/panicButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/colorAccent"
        android:elevation="5dp"
        android:fontFamily="@font/playfair_display"
        android:text="PANIC"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>